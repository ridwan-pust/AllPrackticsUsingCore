@model AllPrackticsUsingCore.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select asp-for="Gender" asp-items="Html.GetEnumSelectList<Student.ESex>()" class="form-control"></select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>

            @*<div class="form-group">
                <label asp-for="Shift" class="control-label"></label>
                <select asp-for="Shift" asp-items="Html.GetEnumSelectList<Student.EShift>()" class="form-control"></select>
                <span asp-validation-for="Shift" class="text-danger"></span>
            </div>*@

            <div class="form-group">
                <label asp-for="Shift" class="control-label"></label>
                @Html.DropDownListFor(m => m.Shift, new SelectList(Enum.GetValues(typeof(Student.EShift))), "Select Shift",new { @class = "form-control" })
            </div>

            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsResidential" /> @Html.DisplayNameFor(model => model.IsResidential)
                </label>
            </div>

            <div class="form-group ">
                <label asp-for="IsMarried" class="control-label"></label>
                <div class="border form-control">
                    Yes
                    <input asp-for="IsMarried" value="1" type="radio">
                    No
                    <input asp-for="IsMarried" value="0" type="radio" checked>
                </div>
            </div>

            <div class="form-group ">
                @Html.LabelFor(model => model.Nationality, htmlAttributes: new { @class = "control-label " })
                <div class=" border form-control ">
                    Bangladeshi
                    @Html.RadioButtonFor(model => model.Nationality, "Bangladeshi")
                    Forign
                    @Html.RadioButtonFor(model => model.Nationality, "Forign")
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Picture" class="control-label"></label>
                <input type="file" name="files" asp-for="Picture" multiple class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" asp-for="Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
